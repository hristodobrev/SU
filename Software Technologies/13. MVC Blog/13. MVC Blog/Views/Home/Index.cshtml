@{
    ViewBag.Title = "Home";
}

@using _13.MVC_Blog.Models
@model List<Post>

    <nav class="navbar col-md-2" role="navigation">
        <ul class="nav sidebar-nav nav-stacked">
            @foreach (Post post in ViewBag.SidebarPosts)
            {
                <li>
                    <a href="\Posts\Details\@post.Id">@post.Title</a>
                </li>
            }
        </ul>
    </nav>

<div class="col-md-10">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6">
                <h2>@post.Title</h2>
                <div class="about">
                    Posted on <i>@post.Date</i>
                    @if (post.Author != null)
                {
                        @:by <i>@post.Author.FullName</i>
                    }
                </div>
                <p class="body">
                    @Html.Raw(post.Body)
                </p>
            </div>
        }
    </div>
</div>